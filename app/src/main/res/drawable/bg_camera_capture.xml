<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:attr/colorControlHighlight">

    <!-- Outer Circle (Border) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#B2CCCCCC" /> <!-- Border color -->
            <size android:width="80dp" android:height="80dp" /> <!-- Outer circle size -->
        </shape>
    </item>

    <!-- Inner Circle (Button) -->
    <item android:bottom="4dp" android:top="4dp" android:left="4dp" android:right="4dp">
        <shape android:shape="oval">
            <solid android:color="#B2FFFFFF" /> <!-- Inner circle color -->
        </shape>
    </item>

</ripple>